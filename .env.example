# Telegram
BOT_TOKEN=123456:ABC-DEF1234ghIkl-zyx57W2v1u123ew11
WEBHOOK_DOMAIN=example.com
WEBHOOK_PORT=443
WEBHOOK_PATH=webhook/secret-long-random-path
WEBHOOK_SECRET_TOKEN=my-super-secret-token

# Telegram ID администратора (обязательно)
# Используется для пересылки ЛС и проверки прав на /getid
ADMIN_ID=123456789

# Режим пересылки: admin (ЛС админу), group (в группу), both (оба)
NOTIFY_MODE=admin

# Chat ID группы (обязательно при NOTIFY_MODE = group или both)
# Узнать ID можно командой /getid в нужном чате
GROUP_CHAT_ID=

# Postgres
POSTGRES_USER=govorun
POSTGRES_PASSWORD=changeme
POSTGRES_DB=govorun
POSTGRES_DSN=postgresql+psycopg://govorun:changeme@postgres:5432/govorun

# Redis
REDIS_DSN=redis://redis:6379/0

# Rate limit (секунды, по умолчанию 3600 = 1 час)
RATE_LIMIT_SECONDS=3600

# Максимальная длина сообщения
MAX_MESSAGE_LENGTH=2000

# Logging
LOG_LEVEL=INFO

# Внутренний HTTP сервер бота
APP_HOST=0.0.0.0
APP_PORT=8080
